<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/gradient_background">

    <!-- Botón Entradas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#0F2027"
        android:padding="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/imgEntradas"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_entrada" />

        <Button
            android:id="@+id/btnEntradas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Entradas"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <!-- Botón Bebidas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#0F2027"
        android:padding="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/imgBebidas"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_bebida" />

        <Button
            android:id="@+id/btnBebidas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bebidas"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <!-- Botón Platos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#0F2027"
        android:padding="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/imgPlatos"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_plato" />

        <Button
            android:id="@+id/btnPlatos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Platos"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <!-- Botón Postres -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#0F2027"
        android:padding="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/imgPostres"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_postre" />

        <Button
            android:id="@+id/btnPostres"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Postres"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <!-- Botón Licores -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#0F2027"
        android:padding="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/imgLicores"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_licores" />

        <Button
            android:id="@+id/btnLicores"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Licores"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent" />
    </LinearLayout>

</LinearLayout>

